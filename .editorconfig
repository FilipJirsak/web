# Root .editorconfig file for cesko.digital
# Documentation: https://editorconfig.org/

root = true

[*]
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

# JavaScript Files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# SASS files
[*.{sass,scss}]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2
